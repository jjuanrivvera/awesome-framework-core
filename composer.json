{
    "name": "jjuanrivvera/awesome-framework-core",
    "description": "Awesome Framework Core",
    "keywords": [
        "core",
        "framework",
        "awesome"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Juan Felipe Rivera G",
            "email": "jjuanrivvera@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        }
    },
    "require": {
        "ext-json": "*",
        "ext-pdo": "*",
        "filp/whoops": "^2.14",
        "php-di/php-di": "^7.0",
        "phpmailer/phpmailer": "^6.6",
        "psr/http-message": "^1.0",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "Awesome\\": "src/"
        },
        "files": [
            "src/Helpers.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "phpstan": "phpstan --xdebug"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "^1.9"
    }
}
